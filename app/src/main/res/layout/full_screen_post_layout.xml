<RelativeLayout
    android:id="@+id/regular_post_main_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/regular_post_playerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:resize_mode="fit"
        app:controller_layout_id="@layout/regular_post_main_player_controller"
        android:animateLayoutChanges="true"/>

    <TextView
        android:id="@+id/regular_post_views_count"
        android:layout_width="wrap_content"
        android:minWidth="38dp"
        android:layout_height="wrap_content"
        android:text="200k"
        android:padding="4dp"
        android:layout_alignParentRight="true"
        android:layout_above="@id/post_interaction_button_holder"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/post_views_text_bg"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#fff"
        android:shadowColor="#4e4e4e"
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="3"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/post_interaction_button_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/regular_post_heart_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:srcCompat="@drawable/ic_heart_filled"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/regular_post_heart_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5k"
            android:textColor="#fff"
            android:shadowColor="#4e4e4e"
            android:shadowDy="1"
            android:shadowDx="1"
            android:shadowRadius="3"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/regular_post_comment_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:srcCompat="@drawable/ic_comment_filled"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/regular_post_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4k"
            android:textColor="#fff"
            android:shadowColor="#4e4e4e"
            android:shadowDy="1"
            android:shadowDx="1"
            android:shadowRadius="3"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/regular_post_broadcast_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:srcCompat="@drawable/ic_broadcast_icon"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/regular_post_broadcast_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500"
            android:textColor="#fff"
            android:shadowColor="#4e4e4e"
            android:shadowDy="1"
            android:shadowDx="1"
            android:shadowRadius="3"
            android:layout_gravity="center_horizontal"
            android:textSize="10sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/regular_post_buffering_spinner"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_loading_icon"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/regular_post_user_identity_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/regular_post_dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/post_user_border_bg"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/regular_post_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aneek Rahman"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="12sp"
            android:shadowColor="#4e4e4e"
            android:shadowDy="1"
            android:shadowDx="1"
            android:shadowRadius="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:srcCompat="@drawable/ic_verified_icon"
            android:visibility="visible" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/regular_post_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_desc"
            android:textColor="#fff"
            android:textSize="12sp"
            android:shadowColor="#4e4e4e"
            android:shadowDy="1"
            android:shadowDx="1"
            android:shadowRadius="3"
            android:clickable="true"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/fullscreen_collapse_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_collapse_icon"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:padding="7dp"/>

</RelativeLayout>