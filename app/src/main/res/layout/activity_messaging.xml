<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SubActivites.MessagingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <ImageView
                android:id="@+id/messaging_back_icon"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:padding="20dp"
                app:srcCompat="@drawable/ic_left_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/messaging_msg_user_dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/demo_image" />

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/messaging_msg_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aneek Rahman"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/messaging_msg_user_active_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active now"
                        android:textColor="#089b00"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                app:srcCompat="@drawable/nav_video_camera_icon" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="20dp"
                app:srcCompat="@drawable/ic_upload_icon" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/messaging_edit_text_bg"
                android:gravity="center_vertical"
                android:hint="Enter message"
                android:paddingBottom="13dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="13dp"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:maxHeight="150dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="14dp"
                android:text="SEND"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>